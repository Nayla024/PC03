@model List<Registro>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Productos registrados</h1>


    <table class="table table-primary table-striped">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Url</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Celular</th>
            <th>Lugar</th>
            <th>Nombre User</th>
            <th>Fecha</th>
        </tr>
        </thead>

        @if (Model.Count == 0) {
            <tr>
                <td colspan="8" class="text-center">No se encontraron registros. :D </td>
                 <th>
                 <a href="/Home/Registro">Solicitud de registro</a> </th>
            </tr>
        }

        @foreach (var registros in Model) 
        {
            <tr>
                <td>@registros.Id</td>
                <td>@registros.Producto</td>
                <td>@registros.Url</td>
                <td>@registros.Descripcion</td>
                <td>@registros.Precio</td>
                <td>@registros.Cantidad</td>
                <td>@registros.Celular</td>
                <td>@registros.Lugar</td>
                <td>@registros.Nombre</td>
                <td>@registros.Fecha</td>
            </tr>
        }
        
    </table>
</div>
